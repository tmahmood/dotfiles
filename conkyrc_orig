${fs_bar /opt}
${hr}
${color grey}network${color}
dn: ${alignr}${downspeed enp0s31f6}
${downspeedgraph enp0s31f6 20}
up: ${alignr}${upspeed enp0s31f6}
${upspeedgraph enp0s31f6 20}
${color grey}total${color}
dn: ${totaldown enp0s31f6} 	up: ${totalup enp0s31f6}
${hr}
