snippet table "Description" b
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>${1}</th>
			<th>${2}</th>
			<th>${3}</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(\$${4:$items} as \$${5:item})
		<tr>
			<td>\{\{ \$$5->`!p snip.rv=t[1].lower()` \}\}</td>
			<td>\{\{ \$$5->`!p snip.rv=t[2].lower()` \}\}</td>
			<td>\{\{ \$$5->`!p snip.rv=t[3].lower()` \}\}</td>
			<td>
				<a href="/${6:item}/edit/\{\{ \$$5->id \}\}" class="btn btn-success">
					<span class="glyphicon glyphicon-edit"></span>
				</a>
				<a href="/${6:item}/delete/\{\{ \$$5->id \}\}" class="btn btn-danger">
					<span class="glyphicon glyphicon-trash"></span>
				</a>
			</td>
		</tr>
		@endforeach
	</tbody>
</table>
endsnippet

snippet form "New form" b
<form class="form" method="POST" action="${1}" ${enctype="multipart/form-data">
	<div class="panel panel-default">
		<div class="panel-heading">
			${2:FORM HEADING}
		</div>
		<div class="panel-body">
			<!-- form content -->

		</div>
		<div class="panel-footer">
			<input type="hidden" value="{{ csrf_token() }}" name="_token">
			<input class="btn btn-success" type="submit" value="Save">
		</div>
	</div>
</form>
endsnippet

snippet panel "New Panel" b
<div class="panel panel-default">
