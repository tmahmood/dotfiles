endsnippet
snippet input "input with bootstrap" b
<div class="form-group">
	<label for="${1:elmid}">${6}${2:`!p snip.rv=t[1].capitalize().replace('_', ' ')`}</label>
	<input id="`!p snip.rv=t[1]`" class="form-control"
		type="${4:text}" name="`!p snip.rv=t[1]`">
</div>${5:}
endsnippet

snippet select "select with bootstrap" b
<div class="form-group">
	<label for="${1:elmid}">${7}${2:LABEL}</label>
	<select id="`!p snip.rv=t[1]`" class="form-control" name="`!p snip.rv=t[1]`">
		<option>-------SELECT-------</option>
		@foreach($${6:items} as $${7:item})
		option${8}
		@endforeach
	</select>
</div>
endsnippet

snippet textarea "input with bootstrap" b
